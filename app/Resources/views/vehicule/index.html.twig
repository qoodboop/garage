{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicules list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Couleur</th>
                <th>Type</th>
                <th>Nbroues</th>
                <th>Poid</th>
                <th>Decapotable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td><a href="{{ path('vehicule_show', { 'id': vehicule.id }) }}">{{ vehicule.id }}</a></td>
                <td>{{ vehicule.couleur }}</td>
                <td>{{ vehicule.type }}</td>
                <td>{{ vehicule.nBroues }}</td>
                <td>{{ vehicule.poid }}</td>
                <td>{{ vehicule.decapotable }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vehicule_show', { 'id': vehicule.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vehicule_edit', { 'id': vehicule.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehicule_new') }}">Create a new vehicule</a>
        </li>
    </ul>
{% endblock %}
